{
  "name": "nodetime",
  "version": "1.0.0",
  "description": "Starport's Swiss knife",
  "scripts": {
    "prebuild": "rm -rf dist && tsc",
    "build": "pkg --public-packages \"*\" --public --no-bytecode -c package.json -o nodetime nodetime"
  },
  "dependencies": {
    "@confio/relayer": "0.4.0",
    "@cosmjs/crypto": "^0.27.0-rc2",
    "@cosmjs/launchpad": "0.27.1",
    "@cosmjs/proto-signing": "^0.27.0-rc2",
    "@cosmjs/stargate": "^0.27.0-rc2",
    "@cosmjs/tendermint-rpc": "^0.27.0-rc2",
    "js-yaml": "4.0.0",
    "json-rpc-2.0": "^1.1.0",
    "long": "^5.2.0",
    "pkg": "github:vercel/pkg#main",
    "protobufjs": "6.10.2",
    "swagger-combine": "^1.4.0",
    "swagger-typescript-api": "^9.3.1",
    "ts-proto": "^1.110.4"
  },
  "bin": "nodetime",
  "pkg": {
    "targets": [
      "node16-linux-x64",
      "node16-linux-arm64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "assets": [
      "./node_modules/typescript/lib/**/*.ts",
      "./node_modules/protobufjs/**/*",
      "./node_modules/long/**/*",
      "./node_modules/@types/**/*",
      "./node_modules/@cosmjs/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.27",
    "typescript": "^4.6.3"
  }
}

